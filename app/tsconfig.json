{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node", // Updated here
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true, // Works with "node" moduleResolution
    "noImplicitAny": false, // Adjust this to true if you want stricter typing
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["./*"]
    },
    "types": [
      "react-native",
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ]
}
